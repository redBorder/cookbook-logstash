<%
valid_nodes = @flow_nodes.select do |node|
  node.dig('rbname') &&
  node.dig('redborder', 'ti_policy_id') &&
  node.dig('redborder', 'ti_policy_name')
end

if valid_nodes && valid_nodes.any? %>
filter {
  threat_intelligence {
    memcached_servers => <%= @memcached_servers %>
    sensors_policies => {
<% valid_nodes.each_with_index do |node, i| %>
      "<%= node['rbname'] %>" => '<%= { 'id' => node['redborder']['ti_policy_id'], 'name' => node['redborder']['ti_policy_name'], 'threshold' => node['redborder']['ti_policy_threshold'] }.to_json %>'
<% end %>
    }
    indicators_types => {
      "lan_ip" => "ip",
      "wan_ip" => "ip"
    }
  }
}
<% else %>
# No threat intelligence policies found.
<% end %>