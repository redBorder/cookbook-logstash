<%
valid_nodes = @flow_nodes.select do |node|
  node.dig('rbname') &&
  node.dig('redborder', 'flow_reputation_id') &&
  node.dig('redborder', 'flow_reputation_name')
end

if valid_nodes && valid_nodes.any? %>
filter {
  flow_reputation {
    memcached_servers => <%= @memcached_servers %>
    sensors_policies => {
<% valid_nodes.each_with_index do |node, i| %>
      "<%= node['rbname'] %>" => '<%= { 'id' => node['redborder']['flow_reputation_id'], 'name' => node['redborder']['flow_reputation_name'], 'threshold' => node['redborder']['flow_reputation_threshold'] }.to_json %>'
<% end %>
    }
  }
}
<% else %>
# No flow reputation policies found.
<% end %>